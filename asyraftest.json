{
  "$jason": {
    "head": {
      "title": "KhidMarT",
            "actions": {
        "visit": [
          {
            "{{#if /\\/edit/.test($jason.url)}}": {
              "type": "$href",
              "options": {
                "url": "{{$jason.url.replace('/edit', '')}}",
                "preload": {
                  "background": "#ffffff"
                }
              }
            }
          },
          {
            "{{#else}}": {
              "type": "$default"
            }
          }
        ]
      }
    },
    "body": {
      "header": {
        "title" : {
                      "type": "image",
                      "style": {
                         "width": "94",
                            "height": "27"
                               },
          "url": "https://khidmart.com/wp-content/uploads/2020/04/no-oval.png"
                                }},
      "background": {
        "type": "html",
        "url": "https://www.khidmart.com",
        "action": {
          "trigger": "visit"
        }
      }
    }
  }
}
