{
    "$jason": {
        "head": {
            "title": "KhidMarT",
            "actions": {
                "$foreground": {
                    "type": "$reload"
                },
                "$load": {
                    "type": "$set",
                    "options": {
                        "url": [{
                            "{{#if $params && 'url' in $params && String($params.url).includes('khidmart.com')}}": "{{$params.url}}?mobile-app-view=true"
                        }, {
                            "{{#elseif $params && 'url' in $params}}": "{{$params.url}}"
                        }, {
                            "{{#else}}": "https://www.khidmart.com?mobile-app-view=true"
                        }]
                    },
                    "success": {
                        "type": "$render"
                    }
                },
                "navigate": {
                    "type": "$href",
                    "options": {
                        "url": "https://albartec.github.io/khidmart/asyraftest.json",
                        "options": {
                            "url": "{{$jason.url}}"
                        }
                    }
                }
            },
            "templates": {
                "body": {
                    "background": {
                        "type": "html",
                        "url": "{{$get.url}}",
                        "action": {
                            "trigger": "navigate"
                        }
                    }
                }
            }
        }
    }
}
